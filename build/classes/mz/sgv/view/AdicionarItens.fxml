               </HBox.margin>
               <font>
                  <Font name="Times New Roman" size="18.0" />
               </font>
            </TextField>
            <ComboBox fx:id="combo_tamanho" prefHeight="40.0" prefWidth="170.0" promptText="Tamanho">
